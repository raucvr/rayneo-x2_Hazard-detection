<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1a1a2e">

    <!-- 标题 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danger Detector"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <!-- API Key 输入 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OpenRouter API Key"
        android:textColor="#cccccc"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/editApiKey"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="sk-or-v1-..."
        android:textColor="#ffffff"
        android:textColorHint="#666666"
        android:background="#2d2d44"
        android:padding="12dp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"/>

    <!-- 检测间隔 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detection Interval"
        android:textColor="#cccccc"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp">

        <SeekBar
            android:id="@+id/seekInterval"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:min="2"
            android:max="10"
            android:progress="3"/>

        <TextView
            android:id="@+id/textInterval"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="3 sec"
            android:textColor="#ffffff"
            android:textAlignment="center"/>
    </LinearLayout>

    <!-- 状态显示 -->
    <TextView
        android:id="@+id/textStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Stopped"
        android:textColor="#ff6b6b"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"/>

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="START"
            android:textColor="#ffffff"
            android:backgroundTint="#4CAF50"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnStop"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="STOP"
            android:textColor="#ffffff"
            android:backgroundTint="#f44336"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- 测试按钮 -->
    <Button
        android:id="@+id/btnTest"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Test Alert Sound"
        android:textColor="#ffffff"
        android:backgroundTint="#2196F3"
        android:layout_marginTop="16dp"/>

    <!-- 说明 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app will automatically detect dangers\nusing your camera and VLM analysis.\n\nRequires WiFi connection."
        android:textColor="#888888"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_marginTop="24dp"/>

</LinearLayout>
