<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CAMERA" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- 新增权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".AutoCaptureApp"
        android:allowBackup="false"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- RayNeo Mercury App 标识 -->
        <meta-data
            android:name="com.rayneo.mercury.app"
            android:value="true" />

        <!-- 配置界面 (启动器入口) -->
        <activity
            android:name=".ConfigActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 后台相机服务 -->
        <service
            android:name=".AutoCaptureService"
            android:exported="true"
            android:foregroundServiceType="camera" />

        <!-- ADB 广播接收器 -->
        <receiver
            android:name=".PhotoReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.rayneo.autocapture.TAKE_PHOTO" />
                <action android:name="com.rayneo.autocapture.START_SERVICE" />
                <action android:name="com.rayneo.autocapture.STOP_SERVICE" />
            </intent-filter>
        </receiver>

        <!-- 开机自启动接收器 -->
        <receiver
            android:name=".BootReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
